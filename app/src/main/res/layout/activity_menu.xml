<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.example.lesivan.aventurapirata.MainActivity">

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btn_representamos"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_margin="15dp"
            android:background="@drawable/identificamos" />

        <ImageButton
            android:id="@+id/btn_conceptos"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_margin="15dp"
            android:background="@drawable/conceptos"
             />

        <ImageButton
            android:id="@+id/btn_ejemplo"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_margin="15dp"
            android:background="@drawable/ejemplo"
             />


    </LinearLayout>

</LinearLayout>
